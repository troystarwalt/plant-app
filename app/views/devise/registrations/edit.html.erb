<div class="uk-container " data-uk-margin>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { method: :put, class: 'uk-form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name, autofocus: true, class: 'uk-form-width-large' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'uk-form-width-large' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'uk-form-width-large' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'uk-form-width-large' %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'uk-form-width-large' %>
  </div>

  <div class="actions form-submit-input">
    <%= f.submit "Update", class: 'uk-button' %>
  </div>
<% end %>

<h3>Delete Account</h3>

<p>Want to delete your account? Go ahead. All of your information will be deleted. <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: 'uk-button', method: :delete %></p>

<%= link_to "Back", :back %>
</div>
